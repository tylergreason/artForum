<h1>ALL IMAGES</h1>

<% Image.todays_image %>

<div class="image_index">
    <% @images.each do |image| %>

        <div class="image_in_index">
            <p><%= image.image_date %></p>
            <p><%= link_to (image_tag image.url), image_path(image) %></p>
            <p><%= link_to image.title, image_path(image) %>, by <%= image.artist %></p>
        </div>
    <% end %>
